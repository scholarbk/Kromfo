<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
   <RelativeLayout
       android:layout_marginTop="50dp"
       android:layout_alignParentTop="true"
       android:id="@+id/r1"
       android:clickable="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="30dp"
           android:id="@+id/txtPassqord"
           android:text="PASSWORD"
           android:textSize="18dp"
           android:textColor="@color/colorAccent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_below="@id/txtPassqord"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="30dp"
           android:id="@+id/txtChargn"
           android:text="Change Your Current Password"
           android:textColor="@color/colorAccent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

   </RelativeLayout>

    <View
        android:id="@+id/v1"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/r1"
        android:background="@color/sc_red"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_below="@+id/v1"
        android:id="@+id/r2"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:id="@+id/txtNot"
            android:text="NOTIFY ME"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/txtNot"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:id="@+id/txtNotice"
            android:text="Notify Me To Turn Scream On When Phone Charger Is Connected"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/sc_red"
            android:layout_alignParentRight="true"
            android:id="@+id/notSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>


    </RelativeLayout>
    <View
        android:id="@+id/v2"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/r2"
        android:background="@color/sc_red"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>