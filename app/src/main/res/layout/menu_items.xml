<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/icon_launcher"
        android:src="@mipmap/ic_launcher"
        android:layout_width="96dp"
        android:layout_height="96dp" />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/icon_launcher"
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"

            android:id="@+id/chargn"
            android:src="@drawable/ic_battery_charging_full_white_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/txtChargn"
            android:text="Charging Guard"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
           android:layout_centerVertical="true"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/sc_red"
           android:layout_alignParentRight="true"
            android:id="@+id/chargingSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </RelativeLayout>

    <View
        android:id="@+id/v1"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/r1"
        android:background="@color/sc_red"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/r2"
        android:layout_below="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:id="@+id/moving"
            android:src="@drawable/ic_directions_run_white_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/txtMovent"
            android:text="Movement Detection Mode"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/sc_red"
          android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/movSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </RelativeLayout>

    <View
        android:id="@+id/v2"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/r2"
        android:background="@color/sc_red"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/r3"
        android:layout_below="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:id="@+id/bootn"
            android:src="@drawable/ic_restore_white_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/boot"
            android:text="Phone Restart Detection Mode"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/sc_red"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/bootSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </RelativeLayout>

    <View
        android:id="@+id/v3"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/r3"
        android:background="@color/sc_red"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/r4"
        android:layout_below="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:id="@+id/flatn"
            android:src="@drawable/ic_layers_white_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/flat"
            android:text="Table Or Flat Surface Detection Mode"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/sc_red"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/flatSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </RelativeLayout>

    <View
        android:id="@+id/v4"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/r4"
        android:background="@color/sc_red"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/r5"
        android:layout_below="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:id="@+id/pocketn"
            android:src="@drawable/ic_streetview_white_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/pocket"
            android:text="Pocket Detection Mode"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/sc_red"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/pocketSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </RelativeLayout>

    <View
        android:id="@+id/v5"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/r5"
        android:background="@color/sc_red"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>