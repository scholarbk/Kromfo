<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/colorPrimaryDark"
    tools:context=".Classes.PasswordActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/txtMes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="Please Enter Your Password"/>

        <com.goodiebag.pinview.Pinview
            android:id="@+id/otpview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cursorVisible="false"
            app:hint="0"
            app:inputType="number"
            app:forceKeyboard="true"
            app:password="false"
            app:pinBackground="@drawable/pin_drawable"
            app:pinHeight="40dp"
            app:pinLength="4"
            app:pinWidth="40dp" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/txtMes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="Confirm Your Password"/>

        <com.goodiebag.pinview.Pinview
            android:id="@+id/otpview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cursorVisible="false"
            app:hint="0"
            app:inputType="number"
            app:forceKeyboard="true"
            app:password="false"
            app:pinBackground="@drawable/pin_drawable"
            app:pinHeight="40dp"
            app:pinLength="4"
            app:pinWidth="40dp" />
        <Button
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/btn_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER"
            android:textColor="@color/colorAccent"
            android:background="@drawable/border_field"/>
        <Button
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_back"
            android:textColor="@color/colorAccent"
            android:background="@null"/>
    </LinearLayout>
</RelativeLayout>
